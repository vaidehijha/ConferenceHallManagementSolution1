@model IEnumerable<ConferenceHallVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h3 class="text-decoration-underline"><i class="bi bi-list"></i>&nbsp;List Of Conferenece Halls</h3>

    <p>
        <a class="btn btn-warning my-2" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create New</a>
    </p>

    <table id="statustable" class="table table-bordered table-hover display">
        <thead>
            <tr class="bg-secondary text-light">
                <th>
                    @Html.DisplayNameFor(model => model.HallNameEn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HallNameHi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Floor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegionId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsApprovalRequired)
                </th>

                <th>Actions</th>
                <th>Session Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HallNameEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HallNameHi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Floor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegionId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationId)
                    </td>
                    <td>
                        @(item.IsApprovalRequired ? "Yes" : "No")
                        
                    </td>

                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" bs-toggle="tooltip" title="Edit this Hall Details" asp-action="Edit" asp-route-id="@item.HallId"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-success" bs-toggle="tooltip" title="View this Hall Details" asp-action="Details" asp-route-id="@item.HallId"><i class="bi bi-binoculars"></i></a>
                            <a class="btn btn-danger" bs-toggle="tooltip" title="Delete this Hall Details" asp-action="Delete" asp-route-id="@item.HallId"><i class="bi bi-x-circle"></i></a>
                        </div>
                        
                    </td>
                    <td>
                        <a class="btn btn-info" asp-controller="ConferenceHallSessions" asp-action="Index" asp-route-id="@item.HallId"><i class="bi bi-view-list"></i>&nbsp;Sessions</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>
    $(document).ready( function () {
        $('#statustable').DataTable();
    } );

</script>
