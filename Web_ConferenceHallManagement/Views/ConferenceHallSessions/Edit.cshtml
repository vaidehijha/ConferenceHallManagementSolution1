@model ConferenceHallSessionVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <h4 class="text-decoration-underline">@(ViewBag?.HallName ?? "Hall") - Session</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SessionId" />
                <input type="hidden" asp-for="HallId" />

                <div class="form-group">
                    <label asp-for="SessionEn" class="control-label"></label>
                    <input asp-for="SessionEn" class="form-control" />
                    <span asp-validation-for="SessionEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SessionHi" class="control-label"></label>
                    <input asp-for="SessionHi" class="form-control" />
                    <span asp-validation-for="SessionHi" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button class="btn btn-success"><i class="bi bi-floppy"></i>&nbsp;Save</button> |
                    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model?.HallId"><i class="bi bi-list"></i>&nbsp;Back to List</a>
                </div>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
