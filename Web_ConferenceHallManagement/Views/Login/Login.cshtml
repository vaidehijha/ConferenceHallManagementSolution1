@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="card col-md-5 mx-auto mt-5 p-3 bg-light rounded-5">
                       
            
            <h5 class="text-center my-2 text-decoration-underline">User Login</h5>
            <hr />

            <div class="row w-75 mx-auto">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                               

                <div class="form-group mb-2">
                    <label asp-for="UserName" class="control-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                            <input asp-for="UserName" placeholder="User Name" class="form-control" />
                        </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Password" class="control-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-unlock2"></i></span>
                            <input asp-for="Password" placeholder="Password" class="form-control" />
                        </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Captcha" class="control-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-robot"></i></span>
                            <input asp-for="Captcha" placeholder="Captcha Text" class="form-control" />
                        </div>
                    <span asp-validation-for="Captcha" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button class="btn btn-success"><i class="bi bi-box-arrow-in-right"></i>&nbsp;Submit</button> |
                    <a class="btn btn-secondary" href="https://webapps.powergrid.in/reset-password-v3/t/default"><i class="bi bi-arrow-clockwise"></i>&nbsp;Forget Password</a>
                </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
