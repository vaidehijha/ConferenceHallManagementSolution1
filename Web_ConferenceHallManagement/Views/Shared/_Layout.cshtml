<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CHBM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_ConferenceHallManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/responsive/3.0.5/css/responsive.dataTables.css" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">
    <link href="//cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>
<body style="font-family:Candara;">
    <header class="fixed-top bg-white">
        <div class="row w-75 mx-auto justify-content-center mt-3 p-3">
            <div class="col-md-6 text-center">
                <img src="~/images/logoen.png" alt="logo" class="img-fluid col-md-10" />
            </div>
            <div class="col-md-6">
                <h4 class="text-center my-3 text-uppercase fw-bold">Conference Hall Booking Management</h4>
            </div>

        </div>

        <nav class="col-md-10 mx-auto navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-1" style="background-color:#007f98;">
            <div class="container-fluid">
                <a class="navbar-brand" href="https://webapps.powergrid.in/newintranet/login.aspx">POWERGRID</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="ConferenceHallBookings" asp-action="Create">Book Conference Hall</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="ConferenceHallBookings" asp-action="Index">My Bookings</a>
                            </li>

                            @if (User.IsInRole("1"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Master Data
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="CHBookingStatus" asp-action="Index">Booking Status</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="CHMRoomType" asp-action="Index">Room Types</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin Works
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="CHBookingStatus" asp-action="Index">Manage Roles</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ConferenceHall" asp-action="Index">Manage Halls</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ConferenceHallBookings" asp-action="AdminIndex">Manage Bookings</a></li>
                                    </ul>
                                </li>
                            }


                        </ul>

                        <h6 class="me-2 text-white mt-1 me-3">Welcome, @User.Identity.Name</h6>
                        <a class="btn btn-sm btn-danger rounded rounded-pill" asp-area="" asp-controller="Login" asp-action="Logout"><i class="bi bi-box-arrow-in-right"></i>&nbsp;&nbsp;Logout</a>
                    }
                    @* else
                    {
                        <a class="btn btn-sm btn-success rounded rounded-pill" asp-area="" asp-controller="Login" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i>&nbsp;&nbsp;Login</a>
                    } *@

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0 mx-0" style="margin-top:180px;">
        <main role="main" class="col-md-10 p-0 m-0 mx-auto">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            &copy; @DateTime.Now.Year - Power Grid Corporation Of India Ltd - <a href="https://www.powergrid.in/">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="//cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>
    <script src="//cdn.datatables.net/responsive/3.0.5/js/dataTables.responsive.js"></script>
    <script src="//cdn.datatables.net/responsive/3.0.5/js/responsive.dataTables.js"></script>

    <script src="//code.jquery.com/ui/1.14.1/jquery-ui.js"></script>
    <script src="//cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
