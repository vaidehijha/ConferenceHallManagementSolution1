<div class="admin-bookings-container">
    <div class="page-header">
        <h4 class="page-title">
            <i class="bi bi-journal-text"></i>
            <span>Hall Booking Requests</span>
        </h4>
        @if (!string.IsNullOrEmpty(UserRoleName) || !string.IsNullOrEmpty(AccessDescription))
        {
            <div class="access-badges">
                @if (!string.IsNullOrEmpty(UserRoleName))
                {
                    <span class="badge badge-primary">@UserRoleName</span>
                }
                @if (!string.IsNullOrEmpty(AccessDescription))
                {
                    <span class="badge badge-info">@AccessDescription</span>
                }
            </div>
        }
    </div>

    @if (IsLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3 text-muted">Loading requests...</p>
        </div>
    }
    else if (FilteredBookings == null || !FilteredBookings.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <p class="mt-3">No booking requests found for your access level.</p>
        </div>
    }
    else
    {
        @foreach (var item in FilteredBookings)
        {
            <div class="booking-card">
                <!-- Card Header -->
                <div class="card-header-section">
                    <div>
                        <div class="hall-title">@item.HallName</div>
                        <div class="room-type-badge">@item.SeatingType</div>
                        <div class="sessions-count">Sessions: @item.ActiveSessionsCount</div>
                    </div>
                    <button class="btn-view" @onclick="() => OpenAdminModal(item)">
                        <i class="bi bi-eye-fill"></i> VIEW
                    </button>
                </div>

                <!-- Card Content Grid -->
                <div class="card-content">
                    <!-- Booked By -->
                    <div class="info-item">
                        <span class="info-label">Booked By</span>
                        <div class="user-name-block">
                            <span class="user-name-text">@item.BookedBy</span>
                            @if (!string.IsNullOrEmpty(item.EmpNo) && item.EmpNo != "N/A" && item.EmpNo != item.BookedBy)
                            {
                                <span class="user-meta">ID: @item.EmpNo</span>
                            }
                            <span class="user-meta">Ph: @item.BookedByPhone</span>
                        </div>
                    </div>

                    <!-- Program Name -->
                    <div class="info-item">
                        <span class="info-label">Program Name</span>
                        <span class="info-value program-name">@item.ProgramName</span>
                    </div>

                    <!-- Dates -->
                    <div class="info-item">
                        <span class="info-label">Dates</span>
                        <div class="date-section">
                            <span class="date-value">@item.FromDate</span>
                            <div class="date-separator"></div>
                            <span class="date-value">@item.ToDate</span>
                        </div>
                    </div>

                    <!-- Attendees -->
                    <div class="info-item">
                        <span class="info-label">Attendees (Att.)</span>
                        <span class="info-value attendees-value">@item.Attendees</span>
                    </div>

                    <!-- Remarks -->
                    <div class="info-item remarks-item">
                        <span class="info-label">Remarks</span>
                        <span class="remarks-value">@GetCleanRemark(item.Remarks)</span>
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (ShowModal && SelectedBooking != null)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);" @onclick="CloseModal">
        <div class="modal-dialog modal-lg modal-dialog-centered" @onclick:stopPropagation="true">
