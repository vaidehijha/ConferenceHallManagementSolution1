@page "/admin-bookings"
@rendermode InteractiveServer

@using ConferenceHallManagement.web.ViewModels
@using ConferenceHallManagement.web.Services
@using Models_ConferenceHallManagement.AppDbModels
@using UoW_ConferenceHallManagement
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using System.Text.RegularExpressions
@using Microsoft.JSInterop

@inject IUserBookingService BookingService
@inject IUnitOfWork _uow
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime

<style>
    /* Screenshot-Matching Table Styles */
    .admin-table-container {
        background: #fff;
        border-radius: 4px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .admin-table {
        font-size: 0.85rem;
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #e0e0e0;
    }

        .admin-table th {
            background-color: #3f51b5; /* Matching the Blue Header */
            color: white;
            font-weight: 700;
            text-transform: uppercase;
            padding: 12px 15px;
            text-align: left;
            border: none;
            letter-spacing: 0.5px;
        }

        .admin-table td {
            background-color: #fff;
            border-bottom: 1px solid #f0f0f0;
            padding: 12px 15px;
            vertical-align: top; /* Align to top for multi-line content */
            color: #444;
        }

    /* Column Specific Styles */
    .hall-name {
        color: #2196f3;
        font-weight: 700;
        font-size: 0.95rem;
        text-decoration: none;
        display: block;
        margin-bottom: 4px;
    }

    .user-name-block {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .user-name-text {
        font-weight: 700;
        color: #222;
        font-size: 0.9rem;
    }

    .user-meta {
        font-size: 0.75rem;
        color: #888;
        display: block;
    }

    .program-name {
        font-weight: 600;
        font-size: 0.9rem;
        color: #333;
    }

    /* Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        color: white;
        display: inline-block;
        min-width: 100px;
        text-align: center;
        text-transform: capitalize;
    }

    .status-auto {
        background-color: #00bcd4;
    }

    .status-approved {
