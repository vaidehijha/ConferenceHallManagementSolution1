                            <div class="detail-label">Phone</div>
                            <div class="detail-value">@SelectedBooking.BookedByPhone</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="detail-label">Remarks</div>
                            <div class="detail-value bg-light p-2 rounded border">
                                @GetCleanRemark(SelectedBooking.Remarks)
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h6 class="fw-bold mb-3 text-secondary">Session Breakdown</h6>

                    @if (SelectedBooking.SessionDetails != null && SelectedBooking.SessionDetails.Any())
                    {
                        <table class="table table-sm table-bordered text-center small mb-0 align-middle">
                            <thead class="table-light"><tr><th>Date</th><th>Slot</th><th>Status</th><th>Action</th></tr></thead>
                            <tbody>
                                @foreach (var session in SelectedBooking.SessionDetails)
                                {
                                    bool isPastDate = session.Date.Date < DateTime.Today;
                                    bool isPending = session.StatusCode == 1;

                                    <tr>
                                        <td>@session.DisplayDate</td>
                                        <td>@session.SessionTime</td>
                                        <td>
                                            @if (isPastDate && isPending)
                                            {
                                                <span class="badge bg-info text-white">Auto Approved</span>
                                            }
                                            else if (session.StatusCode == 1)
                                            {

                                                <span class="text-warning fw-bold">Pending</span>
                                            }
                                            else if (session.StatusCode == 2)
                                            {

                                                <span class="text-success fw-bold">Approved</span>
                                            }
                                            else
                                            {

                                                <span class="text-muted">@session.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isPastDate)
                                            {
                                                <span class="badge bg-secondary">Completed</span>
                                            }
                                            else if (isPending && BookingAccessFilter.CanApproveReject(UserSession, SelectedBooking.LocationId))
                                            {
                                                <button class="btn btn-success btn-sm py-1 px-2 me-1" 
                                                        type="button"
                                                        title="Approve" 
                                                        @onclick="async () => await ApproveSession(session.RecordId)"
                                                        @onclick:stopPropagation="true">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                                <button class="btn btn-danger btn-sm py-1 px-2" 
                                                        type="button"
                                                        title="Reject" 
                                                        @onclick="async () => await RejectSession(session.RecordId)"
                                                        @onclick:stopPropagation="true">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted small py-3">No session details available.</div>
                    }
                </div>
                <div class="modal-footer py-3 bg-light d-flex justify-content-between">
                    <div>
                        @{
                            // Check if there are any pending sessions
                            bool hasPendingSessions = SelectedBooking?.SessionDetails?.Any(s => s.StatusCode == 1) ?? false;
                        }
                        @if (SelectedBooking != null && hasPendingSessions && 
                             BookingAccessFilter.CanApproveReject(UserSession, SelectedBooking.LocationId))
                        {
                            <button class="btn btn-sm btn-success me-2" 
                                    type="button"
                                    @onclick="async () => await ApproveEntireBooking()"
                                    @onclick:stopPropagation="true">
                                <i class="bi bi-check-all me-1"></i>Approve All
                            </button>
                            <button class="btn btn-sm btn-danger" 
                                    type="button"
                                    @onclick="async () => await RejectEntireBooking()"
                                    @onclick:stopPropagation="true">
                                <i class="bi bi-x-circle me-1"></i>Reject All
                            </button>
                        }
                    </div>
                    <button class="btn btn-sm btn-secondary" 
                            type="button"
                            @onclick="CloseModal"
                            @onclick:stopPropagation="true">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    public class AdminBookingDTO : BookingListVM
    {
        public string EmpNo { get; set; } = "";
        public string BookedByPhone { get; set; } = "";
        public int? RegionId { get; set; }
        public int? LocationId { get; set; }
    }

    private List<AdminBookingDTO> AllBookings { get; set; } = new();
    private List<AdminBookingDTO> FilteredBookings { get; set; } = new();
    private bool ShowModal = false;
    private AdminBookingDTO? SelectedBooking;
    private bool IsLoading = true;
    private bool CanApproveReject = false;
    private string UserRoleName = "";
    private string AccessDescription = "";
    private UserSessionDetails? UserSession;

    protected override async Task OnInitializedAsync()
    {
        await LoadAdminData();
    }

    private async Task LoadAdminData()
    {
        try
        {
            IsLoading = true;
            StateHasChanged();
            
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                // Get user session from claims (no DB hit needed!)
                UserSession = ClaimsHelper.GetSessionFromClaims(user);
                
                if (UserSession != null && UserSession.Roles.Any())
                {
                    var primaryRole = UserSession.GetPrimaryRole();
                    if (primaryRole != null)
                    {
                        UserRoleName = primaryRole.RoleName;
                        AccessDescription = BookingAccessFilter.GetAccessDescription(UserSession);
                        
                        // Determine if user can approve/reject based on role
                        // Super Admin (1) and Station Admin (4) can approve
                        CanApproveReject = primaryRole.RoleId == 1 || primaryRole.RoleId == 4;

                        // Load ALL bookings from database with proper includes
                        var allEntities = await _uow.ConferenceHallBookingDataRepository.GetFilteredBookings(
                            primaryRole.RoleId, 
                            primaryRole.RegionId, 
                            primaryRole.LocationId
                        );

                        // Create temporary list to store bookings
                        var tempBookings = new List<AdminBookingDTO>();

                        foreach (var e in allEntities)
                        {
                            // Get employee name from repository
                            var empDetails = await EmployeeRepo.GetEmployeeById(e.CreatedBy ?? "");
                            string bookedByName = empDetails?.Empname ?? e.CreatedBy ?? "Unknown";

                            var booking = new AdminBookingDTO
                            {
                                BookingId = e.BookingId,
                                HallName = e.Hall?.HallNameEn ?? e.Hall?.HallNameHi ?? "Unknown Hall",
                                SeatingType = e.RoomType?.RoomTypeEn ?? e.RoomType?.RoomTypeHi ?? "Standard",
                                BookedBy = bookedByName, // Use actual name instead of EmpNo
                                EmpNo = e.CreatedBy ?? "N/A",
                                BookedByPhone = ParsePhoneFromRemarks(e.Remarks),
                                ProgramName = e.ProgramName ?? "Meeting",
                                Attendees = e.NoOfAttendees,
                                FromDate = e.ConferenceHallBookingSessions != null && e.ConferenceHallBookingSessions.Any() 
                                    ? e.ConferenceHallBookingSessions.Min(s => s.BookingDate).ToString("dd-MMM-yyyy") 
                                    : "-",
                                ToDate = e.ConferenceHallBookingSessions != null && e.ConferenceHallBookingSessions.Any() 
                                    ? e.ConferenceHallBookingSessions.Max(s => s.BookingDate).ToString("dd-MMM-yyyy") 
                                    : "-",
                                Remarks = e.Remarks ?? string.Empty,
                                BookingStatus = e.StatusNavigation?.StatusTextEn ?? "Pending",
                                ActiveSessionsCount = e.ConferenceHallBookingSessions?.Count ?? 0,
                                RegionId = e.Hall?.RegionId,
                                LocationId = e.Hall?.LocationId,
                                SessionDetails = e.ConferenceHallBookingSessions != null && e.ConferenceHallBookingSessions.Any()
                                    ? e.ConferenceHallBookingSessions.Select(s => new BookingSessionDetailVM
                                    {
                                        RecordId = s.Id,
                                        Date = s.BookingDate,
                                        SessionTime = MapSessionIdToTime(s.SessionId, s.Session?.SessionEn),
                                        Status = s.StatusNavigation?.StatusTextEn ?? "Pending",
                                        StatusCode = s.Status
                                }).OrderBy(s => s.Date).ToList()
                                : new List<BookingSessionDetailVM>()
                            };

                            tempBookings.Add(booking);
                        }

                        AllBookings = tempBookings.OrderByDescending(b => b.BookingId).ToList();

                        // For Super Admin (1) and Central Admin (2), we need ALL bookings
                        if (primaryRole.RoleId == 1 || primaryRole.RoleId == 2)
                        {
                            var allBookingsQuery = await _uow.ConferenceHallBookingDataRepository.GetFilteredBookings(1, null, null);
                            tempBookings = new List<AdminBookingDTO>();

                            foreach (var e in allBookingsQuery)
                            {
                                var empDetails = await EmployeeRepo.GetEmployeeById(e.CreatedBy ?? "");
                                string bookedByName = empDetails?.Empname ?? e.CreatedBy ?? "Unknown";

                                var booking = new AdminBookingDTO
                                {
                                    BookingId = e.BookingId,
                                    HallName = e.Hall?.HallNameEn ?? e.Hall?.HallNameHi ?? "Unknown Hall",
                                    SeatingType = e.RoomType?.RoomTypeEn ?? e.RoomType?.RoomTypeHi ?? "Standard",
                                    BookedBy = bookedByName,
                                    EmpNo = e.CreatedBy ?? "N/A",
                                    BookedByPhone = ParsePhoneFromRemarks(e.Remarks),
                                    ProgramName = e.ProgramName ?? "Meeting",
                                    Attendees = e.NoOfAttendees,
                                    FromDate = e.ConferenceHallBookingSessions != null && e.ConferenceHallBookingSessions.Any() 
                                        ? e.ConferenceHallBookingSessions.Min(s => s.BookingDate).ToString("dd-MMM-yyyy") 
                                        : "-",
                                    ToDate = e.ConferenceHallBookingSessions != null && e.ConferenceHallBookingSessions.Any() 
                                        ? e.ConferenceHallBookingSessions.Max(s => s.BookingDate).ToString("dd-MMM-yyyy") 
                                        : "-",
                                    Remarks = e.Remarks ?? string.Empty,
                                    BookingStatus = e.StatusNavigation?.StatusTextEn ?? "Pending",
                                    ActiveSessionsCount = e.ConferenceHallBookingSessions?.Count ?? 0,
                                    RegionId = e.Hall?.RegionId,
                                    LocationId = e.Hall?.LocationId,
                                    SessionDetails = e.ConferenceHallBookingSessions != null && e.ConferenceHallBookingSessions.Any()
                                        ? e.ConferenceHallBookingSessions.Select(s => new BookingSessionDetailVM
                                        {
                                            RecordId = s.Id,
                                            Date = s.BookingDate,
                                            SessionTime = MapSessionIdToTime(s.SessionId, s.Session?.SessionEn),
                                            Status = s.StatusNavigation?.StatusTextEn ?? "Pending",
                                            StatusCode = s.Status
                                    }).OrderBy(s => s.Date).ToList()
                                    : new List<BookingSessionDetailVM>()
                                };

                                tempBookings.Add(booking);
                            }

                            AllBookings = tempBookings.OrderByDescending(b => b.BookingId).ToList();
                        }

                        // Apply additional client-side filtering based on BookingAccessFilter
                        FilteredBookings = BookingAccessFilter.FilterBookingsByRole(
                            AllBookings, 
                            UserSession,
                            b => b.RegionId,
                            b => b.LocationId,
                            b => b.EmpNo
                        );
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private string MapSessionIdToTime(int sessionId, string? dbValue)
    {
        if (sessionId == 1) return "09:00 AM - 01:00 PM";
        if (sessionId == 2) return "02:00 PM - 05:00 PM";
        return dbValue ?? "Unknown Slot";
    }

    private string ParsePhoneFromRemarks(string remarks)
    {
        if (string.IsNullOrEmpty(remarks)) return "N/A";
        if (remarks.Contains("|") && remarks.Trim().StartsWith("Phone:"))
        {
            try { return remarks.Split('|')[0].Replace("Phone:", "").Trim(); } catch { return "N/A"; }
        }
        return "N/A";
    }

    private string GetCleanRemark(string rawRemark)
    {
        if (string.IsNullOrEmpty(rawRemark)) return "-";
        string cleanRemark = rawRemark;

        if (cleanRemark.Contains("|") && cleanRemark.Trim().StartsWith("Phone:"))
        {
            var parts = cleanRemark.Split('|');
            cleanRemark = parts.Length > 1 ? parts[1].Trim() : "";
        }

        int bracketIndex = cleanRemark.IndexOf("[");
        if (bracketIndex > 0)
        {
            cleanRemark = cleanRemark.Substring(0, bracketIndex).Trim();
        }

        return string.IsNullOrWhiteSpace(cleanRemark) ? "-" : cleanRemark;
    }

    private void OpenAdminModal(AdminBookingDTO item) { SelectedBooking = item; ShowModal = true; }
    private void CloseModal() { ShowModal = false; SelectedBooking = null; }

    private async Task ApproveSession(int sessionId)
    {
        // Check if user can approve this specific session
        if (SelectedBooking != null && !BookingAccessFilter.CanApproveReject(UserSession, SelectedBooking.LocationId))
        {
            await JSRuntime.InvokeVoidAsync("alert", "You do not have permission to approve this booking.");
            return;
        }

        try
        {
            var success = await BookingService.UpdateSessionStatusAsync(sessionId, 2);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("toastrSuccess", "Session approved successfully!");
                var bookingId = SelectedBooking?.BookingId;
                await LoadAdminData();
                
                if (bookingId.HasValue && ShowModal)
                {
                    SelectedBooking = FilteredBookings.FirstOrDefault(b => b.BookingId == bookingId.Value);
                    StateHasChanged();
                }
                else
                {
                    CloseModal();
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("toastrError", "Failed to approve session");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("toastrError", $"Error: {ex.Message}");
        }
    }

    private async Task RejectSession(int sessionId)
    {
        // Check if user can reject this specific session
        if (SelectedBooking != null && !BookingAccessFilter.CanApproveReject(UserSession, SelectedBooking.LocationId))
        {
            await JSRuntime.InvokeVoidAsync("alert", "You do not have permission to reject this booking.");
            return;
        }

        try
        {
            var success = await BookingService.UpdateSessionStatusAsync(sessionId, 4);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("toastrSuccess", "Session rejected successfully!");
                var bookingId = SelectedBooking?.BookingId;
                await LoadAdminData();
                
                if (bookingId.HasValue && ShowModal)
                {
                    SelectedBooking = FilteredBookings.FirstOrDefault(b => b.BookingId == bookingId.Value);
                    StateHasChanged();
                }
                else
                {
                    CloseModal();
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("toastrError", "Failed to reject session");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("toastrError", $"Error: {ex.Message}");
        }
    }

    private async Task ApproveEntireBooking()
    {
        if (SelectedBooking == null) return;

        // Check permission
