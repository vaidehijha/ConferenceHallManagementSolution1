@page "/masters/booking-status"
@page "/booking-status"
@rendermode InteractiveServer
@inject IMasterBookingStatusBlazorService Service
@inject NavigationManager Nav
@inject ILogger<Index> Logger
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>Master Booking Status</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-list-check me-2"></i>
                Master Booking Status
                @if (!isLoading)
                {
                    <span class="badge bg-primary fs-6">@AllBookingStatusList.Count</span>
                }
            </h2>
            <p class="text-muted mb-0">Manage booking status configurations</p>
        </div>
        <div class="d-flex gap-3 align-items-center">
            @if (!isLoading && AllBookingStatusList.Any())
            {
                <div class="input-group" style="width: 250px;">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text"
                           class="form-control"
                           placeholder="Search..."
                           value="@searchTerm"
                           @oninput="HandleSearchInput" />
                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                    {
                        <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    }
                </div>
            }
            <a href="/booking-status/create" class="btn btn-success btn-lg shadow">
                <i class="bi bi-plus-circle-fill me-2"></i> Add New
            </a>
        </div>
    </div>

    @if (isSearching)
    {
        <div class="mb-2">
            <small class="text-muted">
                <i class="bi bi-hourglass-split"></i> Searching...
            </small>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 fs-5">Loading booking statuses...</p>
        </div>
    }
    else if (AllBookingStatusList == null || !AllBookingStatusList.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">No Booking Statuses Found</h4>
            <p class="text-muted">Create your first booking status to get started.</p>
            <a class="btn btn-primary btn-lg" href="/booking-status/create">
                <i class="bi bi-plus-circle me-2"></i>Add First Status
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0" id="bookingStatusTable">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-hash me-1"></i>Status ID</th>
                                <th><i class="bi bi-tag me-1"></i>Status Name (English)</th>
                                <th><i class="bi bi-translate me-1"></i>Status Name (Hindi)</th>
                                <th><i class="bi bi-toggle-on me-1"></i>Active</th>
                                <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (BookingStatusList.Any())
                            {
                                @foreach (var item in BookingStatusList)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.StatusId</td>
                                        <td><strong>@item.StatusName</strong></td>
                                        <td>@item.StatusNameHindi</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge rounded-pill bg-success">🟢 Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-danger">🔴 Inactive</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-3">
                                                <a href="/booking-status/edit/@item.Id"
                                                   title="Edit">
                                                    <i class="bi bi-pencil-square text-primary fs-5"></i>
                                                </a>
                                                <button class="btn btn-link p-0 border-0"
                                                        disabled="@(isDeleting && deletingId == item.Id)"
                                                        @onclick="() => HandleDeleteClick(item.Id, item.StatusName)"
                                                        title="Delete">
                                                    @if (isDeleting && deletingId == item.Id)
                                                    {
                                                        <span class="spinner-border spinner-border-sm text-danger"></span>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-trash3-fill text-danger fs-5"></i>
                                                    }
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No results found for "<strong>@searchTerm</strong>"
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {

    private List<MasterBookingStatusVM> AllBookingStatusList = new();
    private List<MasterBookingStatusVM> BookingStatusList = new();

    private bool isLoading;
    private bool isDeleting;
    private bool isSearching;
    private int deletingId;
    private string searchTerm = string.Empty;

    private CancellationTokenSource? searchCancellation;
    private bool isDataTableInitialized;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && BookingStatusList.Any() && !isDataTableInitialized)
        {
            await JS.InvokeVoidAsync("initDataTable", "bookingStatusTable");
            isDataTableInitialized = true;
        }
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var data = await Service.GetAllAsync();
            AllBookingStatusList = data?.ToList() ?? new();
            BookingStatusList = new(AllBookingStatusList);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Load error");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        searchCancellation?.Cancel();
        searchCancellation = new();

        _ = Task.Run(async () =>
        {
            try
            {
                await Task.Delay(500, searchCancellation.Token);
                await InvokeAsync(PerformSearch);
            }
            catch { }
        });
    }

    private void PerformSearch()
    {
        isSearching = true;

        BookingStatusList = FilterBySearchTerm(AllBookingStatusList, searchTerm).ToList();

        isSearching = false;
        StateHasChanged();
    }

    private async Task ClearSearch()
    {
        searchCancellation?.Cancel();
        searchTerm = "";
        BookingStatusList = new(AllBookingStatusList);
        await JS.InvokeVoidAsync("reinitDataTable", "bookingStatusTable");
    }

    private async Task HandleDeleteClick(int id, string name)
    {
        try
        {
            var confirmed = await JS.InvokeAsync<bool>("showConfirmDialog",
                "Delete Booking Status?",
                $"Are you sure you want to delete '{name}'? This action will mark the status as inactive.",
                "warning",
                "Yes, delete it!",
                "Cancel");

            if (!confirmed)
            {
                return;
            }

            isDeleting = true;
            deletingId = id;
            StateHasChanged();

            Logger.LogInformation($"Attempting to delete booking status ID: {id}");
            
            var result = await Service.DeleteAsync(id);
            
            Logger.LogInformation($"Delete service returned: {result}");
            
            Logger.LogInformation("Reloading data after delete attempt");
            await LoadData();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                BookingStatusList = FilterBySearchTerm(AllBookingStatusList, searchTerm).ToList();
            }

            var recordExists = AllBookingStatusList.FirstOrDefault(x => x.Id == id);
            
            if (recordExists == null)
            {
                await JS.InvokeVoidAsync("toastrSuccess", 
                    $"Status '{name}' deleted successfully!", 
                    "Success");
                Logger.LogInformation($"Booking status ID {id} successfully deleted - not found in list");
                
                await JS.InvokeVoidAsync("reinitDataTable", "bookingStatusTable");
            }
            else
            {
                await JS.InvokeVoidAsync("toastrWarning", 
                    "Failed to delete status. No changes were made.", 
                    "Warning");
                Logger.LogWarning($"Booking status ID {id} still exists in list after delete attempt");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, $"Error deleting booking status {id}");
            await JS.InvokeVoidAsync("toastrError", 
                $"Failed to delete: {ex.Message}", 
                "Error");
        }
        finally
        {
            isDeleting = false;
            deletingId = 0;
            StateHasChanged();
        }
    }

    private IEnumerable<MasterBookingStatusVM> FilterBySearchTerm(
        IEnumerable<MasterBookingStatusVM> list, string term)
    {
        if (string.IsNullOrWhiteSpace(term))
            return list;

        term = term.ToLower();

        return list.Where(x =>
            (!string.IsNullOrEmpty(x.StatusName) && x.StatusName.ToLower().Contains(term)) ||
            (!string.IsNullOrEmpty(x.StatusNameHindi) && x.StatusNameHindi.ToLower().Contains(term)) ||
            x.StatusId.ToString().Contains(term));
    }

    public void Dispose()
    {
        searchCancellation?.Cancel();
        searchCancellation?.Dispose();
    }
}

