@page "/masters/room-type"
@page "/room-type"
@rendermode InteractiveServer

@inject IMasterRoomTypeBlazorService Service
@inject NavigationManager Nav
@inject ILogger<Index> Logger
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>Master Room Type</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-door-open me-2"></i>
                Master Room Type
                @if (!isLoading)
                {
                    <span class="badge bg-primary fs-6">@AllRoomTypeList.Count</span>
                }
            </h2>
            <p class="text-muted mb-0">Manage room type configurations</p>
        </div>
        <div class="d-flex gap-3 align-items-center">
            @if (!isLoading && AllRoomTypeList.Any())
            {
                <div class="input-group" style="width: 250px;">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text"
                           class="form-control"
                           placeholder="Search..."
                           value="@searchTerm"
                           @oninput="HandleSearchInput" />

                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                    {
                        <button class="btn btn-outline-secondary"
                                type="button"
                                @onclick="ClearSearch">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    }
                </div>
            }
            <a href="/room-type/create" class="btn btn-success btn-lg shadow">
                <i class="bi bi-plus-circle-fill me-2"></i> Add New
            </a>
        </div>
    </div>

    @if (isSearching)
    {
        <div class="mb-2">
            <small class="text-muted">
                <i class="bi bi-hourglass-split"></i> Searching...
            </small>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3 fs-5">Loading room types...</p>
        </div>
    }
    else if (AllRoomTypeList == null || !AllRoomTypeList.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">No Room Types Found</h4>
            <p class="text-muted">Create your first room type to get started.</p>
            <a class="btn btn-primary btn-lg" href="/room-type/create">
                <i class="bi bi-plus-circle me-2"></i>Add First Room Type
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-hash me-1"></i>Room Type ID</th>
                                <th><i class="bi bi-door-closed me-1"></i>Room Type (English)</th>
                                <th><i class="bi bi-translate me-1"></i>Room Type (Hindi)</th>
                                <th><i class="bi bi-toggle-on me-1"></i>Active</th>
                                <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (RoomTypeList.Any())
                            {
                                @foreach (var item in RoomTypeList)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.RoomTypeId</td>
                                        <td><strong>@item.RoomTypeEn</strong></td>
                                        <td>@item.RoomTypeHi</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge rounded-pill bg-success">🟢 Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-danger">🔴 Inactive</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-3">
                                                <a href="/room-type/edit/@item.RoomTypeId"
                                                   title="Edit">
                                                    <i class="bi bi-pencil-square text-primary fs-5"></i>
                                                </a>
                                                <button class="btn btn-link p-0 border-0"
                                                        disabled="@(isDeleting && deletingId == item.RoomTypeId)"
                                                        @onclick="() => HandleDeleteClick(item.RoomTypeId)"
                                                        title="Delete">
                                                    @if (isDeleting && deletingId == item.RoomTypeId)
                                                    {
                                                        <span class="spinner-border spinner-border-sm text-danger"></span>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-trash3-fill text-danger fs-5"></i>
                                                    }
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No results found for "<strong>@searchTerm</strong>"
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {

    private List<MasterRoomTypeVM> AllRoomTypeList = new();
    private List<MasterRoomTypeVM> RoomTypeList = new();

    private bool isLoading;
    private bool isDeleting;
    private bool isSearching;
    private int deletingId;
    private string searchTerm = string.Empty;

    private CancellationTokenSource? searchCancellation;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var data = await Service.GetAllAsync();
            AllRoomTypeList = data?.ToList() ?? new();
            RoomTypeList = new(AllRoomTypeList);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading room types");
            await JS.InvokeVoidAsync("toastrError", "Failed to load room types", "Error");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        searchCancellation?.Cancel();
        searchCancellation = new();

        _ = Task.Run(async () =>
        {
            try
            {
                await Task.Delay(300, searchCancellation.Token);
                await InvokeAsync(PerformSearch);
            }
            catch { }
        });
    }

    private void PerformSearch()
    {
        isSearching = true;
        StateHasChanged();

        RoomTypeList = FilterBySearchTerm(AllRoomTypeList, searchTerm).ToList();

        isSearching = false;
        StateHasChanged();
    }

    private void ClearSearch()
    {
        searchCancellation?.Cancel();
        searchTerm = "";
        RoomTypeList = new(AllRoomTypeList);
        StateHasChanged();
    }

    private async Task HandleDeleteClick(int id)
    {
        try
        {
            var confirmed = await JS.InvokeAsync<bool>(
                "showConfirmDialog",
                "Delete Room Type?",
                $"Are you sure you want to delete? This action will mark the room type as inactive.",
                "warning",
                "Yes, delete it!",
                "Cancel");

            if (!confirmed)
                return;

            isDeleting = true;
            deletingId = id;
            StateHasChanged();

            Logger.LogInformation($"Deleting room type ID: {id}");

            var result = await Service.DeleteAsync(id);

            if (result > 0)
            {
                await JS.InvokeVoidAsync("toastrSuccess",
                    $"Room type deleted successfully!",
                    "Success");

                await LoadData();

                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    RoomTypeList = FilterBySearchTerm(AllRoomTypeList, searchTerm).ToList();
                }
            }
            else
            {
                await JS.InvokeVoidAsync("toastrWarning",
                    "Failed to delete room type. No changes were made.",
                    "Warning");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, $"Error deleting room type {id}");
            await JS.InvokeVoidAsync("toastrError", "Failed to delete room type", "Error");
        }
        finally
        {
            isDeleting = false;
            deletingId = 0;
            StateHasChanged();
        }
    }

    private IEnumerable<MasterRoomTypeVM> FilterBySearchTerm(
        IEnumerable<MasterRoomTypeVM> list, string term)
    {
        if (string.IsNullOrWhiteSpace(term))
            return list;

        term = term.ToLower();

        return list.Where(x =>
            (!string.IsNullOrEmpty(x.RoomTypeEn) && x.RoomTypeEn.ToLower().Contains(term)) ||
            (!string.IsNullOrEmpty(x.RoomTypeHi) && x.RoomTypeHi.ToLower().Contains(term)) ||
            x.RoomTypeId.ToString().Contains(term));
    }

    public void Dispose()
    {
        searchCancellation?.Cancel();
        searchCancellation?.Dispose();
    }
}
