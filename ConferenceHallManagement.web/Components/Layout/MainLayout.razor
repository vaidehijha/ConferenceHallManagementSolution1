@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row" style="padding: 0; display: flex; align-items: center;">
            <div class="d-flex align-items-center" style="flex: 1; padding-left: 0;">
                <img src="/images/powergridLogo.png" alt="PowerGrid Logo" style="height: 50px; max-width: 100%; object-fit: contain;" />
            </div>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center gap-3 pe-3">
                        <span class="text-dark fw-bold">Welcome, @context.User.Identity?.Name</span>
                        <button class="btn btn-danger rounded-circle" onclick="window.location.href='/Account/Logout'" title="Logout" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; border: none;">
                            <i class="bi bi-x-lg text-white" style="font-size: 1.5rem; font-weight: bold;"></i>
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="pe-3">
                        <a href="/login" class="text-white">Login</a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

